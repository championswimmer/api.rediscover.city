{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "watchPatterns": [
      "Dockerfile",
      "package.json",
      "src/**",
      ".env.*",
      "tsconfig.json",
      "drizzle.config.ts",
      "/railway.json"
    ]
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ALWAYS",
    "restartPolicyMaxRetries": 5,
    "sleepApplication": false
  }
}